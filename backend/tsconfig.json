{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext", 
    "esModuleInterop": true, 
    "forceConsistentCasingInFileNames": true, 
    "strict": true, 
    "skipLibCheck": true, 
    "outDir": "./dist", 
    "rootDir": "./src", 
    "paths": {
      "@/*": ["./src/*"] 
    }
  },
  "include": ["src/**/*"], 
  "exclude": ["node_modules"] 
}
